{
    "name": "jmose/command-scheduler-bundle",
    "description": "This Symfony bundle will allow you to schedule all your commands just like UNIX crontab",
    "keywords": ["Symfony", "scheduler", "cron", "command", "task"],
    "homepage": "https://github.com/Chris53897/CommandSchedulerBundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Julien Guyon",
            "email": "julienguyon@hotmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/console": "^5.2",
        "doctrine/orm": "^2.8.1",
        "doctrine/doctrine-bundle": "^2.2",
        "dragonmantank/cron-expression": "^3.1",
        "symfony/framework-bundle": "^5.2",
        "symfony/twig-bundle": "^5.2",
        "symfony/translation": "^5.2",
        "symfony/form": "^5.2",
        "symfony/asset": "^5.2",
        "symfony/templating": "^5.2",
        "symfony/validator": "^5.2",
        "ext-simplexml": "*",
        "ext-posix": "*",
        "symfony/notifier": "^5.2",
        "nesbot/carbon": "^2.43",
        "symfony/debug-bundle": "^5.2",
        "symfony/dotenv": "^5.2",
        "symfony/twig-pack": "^1.0",
        "twig/cssinliner-extra": "^3.2",
        "twig/inky-extra": "^3.2",
        "symfony/lock": "^5.2",
        "sensio/framework-extra-bundle": "^6.1"
    },
    "require-dev": {
        "ext-pcntl": "*",
        "phpunit/phpunit": "^9.5.0",
        "php-coveralls/php-coveralls": "^2.4",
        "doctrine/doctrine-fixtures-bundle": "^3.4.0",
        "symfony/css-selector": "^5.2",
        "symfony/security-bundle": "^5.2",
        "liip/test-fixtures-bundle": "^1.11.0",
        "rector/rector": "^0.9",
        "thecodingmachine/phpstan-safe-rule": "^1.0",
        "thecodingmachine/phpstan-strict-rules": "^0.12.1",
        "friendsofphp/php-cs-fixer": "^2.17",
        "phpmd/phpmd": "^2.9",
        "phpstan/phpstan": "^0.12.65",
        "escapestudios/symfony2-coding-standard": "^3.12",
        "symfony/browser-kit": "^5.2",
        "symplify/config-transformer": "^9.0",
        "jetbrains/phpstorm-attributes": "^1.0"
    },
    "suggest": {
        "ext-pcntl": "For using the scheduler daemon"
    },
    "scripts": {
        "cscheck": "phpcs",
        "csfix": "phpcbf",
        "codecoverage": "phpunit --coverage-clover coverage.xml",
        "phpstan": "phpstan analyse ./ -c phpstan.neon --level=4 --no-progress -vvv --memory-limit=2048M"
    },
    "autoload": {
        "psr-4": {
            "JMose\\CommandSchedulerBundle\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "Tests/"
        }
    }
}
