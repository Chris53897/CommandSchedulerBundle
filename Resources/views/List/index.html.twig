{% extends "@DukecityCommandScheduler/layout.html.twig" %}
{% trans_default_domain 'DukecityCommandScheduler' %}

{% block title %}
    {{ 'list.title'|trans }}
{% endblock title %}

{% block content %}
    <div class="table-responsive table-stripped">
    <table class="table">
        <thead>
            <tr>
                <th>&nbsp;</th>
                <th>{{ "detail.name"|trans }}</th>
                <th>{{ "detail.command"|trans }}</th>
                <th>{{ "detail.cronExpression"|trans }}</th>
                <th>{{ "detail.logFile"|trans }}</th>
                <th>{{ "detail.lastExecution"|trans }}</th>
                <th>{{ "detail.nextRun"|trans }}</th>
                <th class="text-right">{{ "detail.priority"|trans }}</th>
                <th class="text-right">{{ "detail.actions"|trans }}</th>
            </tr>
        </thead>

        <tbody>
        {% for command in scheduledCommands %}
            <tr {% if command.disabled == true %}class="text-muted" {% endif %}>
                <td>
                    <!-- <a href="{{ path('dukecity_command_scheduler_action_toggle', {'id': command.id}) }}" data-toggle="confirmation" data-btn-ok-label="{{ "action.unlock"|trans }}" data-title="{{ "confirm.unlock"|trans }}" > -->
                    <a href="{{ path('dukecity_command_scheduler_action_toggle', {'id': command.id}) }}" >
                    {% if command.disabled == true %}
                        <span class="text-danger glyphicon glyphicon-off"></span> <span class="sr-only">&nbsp;</span>
                    {% else %}
                        <span class="text-success glyphicon glyphicon-off"></span> <span class="sr-only">&nbsp;</span>
                    {% endif %}
                    </a>
                </td>
                <td>
                    <span style="font-size:14px;" {% if command.disabled == false %}
                            class="label label-success" title="Command is active"
                            {% else %}
                            class="label label-danger" title="Command is disabled"
                            {% endif %}>
                    {{ command.name }}
                    </span>
                </td>
                <td>
                    {{ command.command }} {{ command.arguments }}
                </td>
                <td>
                    {{ command.cronExpression }}
                </td>
                <td>
                    {{ command.logFile }}
                </td>
                <td>
                    <span style="font-size:14px;" class="label label-{% if command.lastReturnCode == 0 %}success{% else %}danger{% endif %}" title="Last Return Code: {{ command.lastReturnCode }}">
                    {{ command.lastExecution is empty ? "" : command.lastExecution|date( "dateFormat"|trans ) }}
                    </span>
                </td>
                <td>
                    {% set nextRunDate = command.getNextRunDate() %}
                    {% if nextRunDate is not null %}
                    {{ nextRunDate|date( "dateFormat"|trans ) }}
                    {% endif %}
                </td>
                <td class="text-right">
                    {{ command.priority }}
                </td>
                <td style="min-width: 90px;" class="text-right">
                    {% if command.locked == true %}
                        <a style="display: inline-block; width: 24px; margin-left: 2px; margin-right: 2px;" href="{{ path('dukecity_command_scheduler_action_unlock', {'id': command.id}) }}" data-toggle="confirmation" data-btn-ok-label="{{ "action.unlock"|trans }}" data-title="{{ "confirm.unlock"|trans }}" >
                            <span class="text-muted glyphicon glyphicon-lock"></span> <span class="sr-only">{{ "action.unlock"|trans }}</span>
                        </a>
                    {% else %}
                       <div style="display: inline-block;"> </div>
                    {% endif %}
                    <a style="display: inline-block; width: 24px; margin-left: 2px; margin-right: 2px;" href="{{ path('dukecity_command_scheduler_detail_edit', {'id': command.id}) }}" >
                        <span class="text-info glyphicon glyphicon-pencil"></span> <span class="sr-only">{{ "action.edit"|trans }}</span>
                    </a>
                    <a style="display: inline-block; width: 24px; margin-left: 2px; margin-right: 2px;" href="{{ path('dukecity_command_scheduler_action_remove', {'id': command.id}) }}"
                       data-toggle="confirmation"
                       data-btn-ok-label="{{ "action.delete"|trans }}"
                       data-title="{{ "confirm.delete"|trans }}" >
                        <span class="text-danger glyphicon glyphicon-trash"></span> <span class="sr-only">{{ "action.delete"|trans }}</span>
                    </a>
                    <a style="display: inline-block; width: 24px; margin-left: 2px; margin-right: 2px;" href="{{ path('dukecity_command_scheduler_action_execute', {'id': command.id}) }}" data-toggle="confirmation" data-btn-ok-label="{{ "action.execute"|trans }}" data-title="{{ "confirm.execute"|trans }}">
                        <span class="text-{% if command.executeImmediately == true %}muted{% else %}success{% endif %} glyphicon glyphicon-play"></span> <span class="sr-only">{{ "action.execute"|trans }}</span>
                    </a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>

    <a href="{{ path('dukecity_command_scheduler_detail_new') }}" class="btn btn-primary btn-lg pull-right" role="button">{{ "action.new"|trans }} Â»</a>
{% endblock content %}
